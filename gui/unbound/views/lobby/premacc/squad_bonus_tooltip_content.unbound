(def constant COUNT_FIELD_TABLE 3)

(def macro TextBlockTableMacro(name:str, text:expression, styleText:str, widthBlock:expression)
    (tf
        (name = "name")
        (style
            (textAlign = "center")
            (width = "widthBlock")
        )
        (class "styleText")
        (text = "text")
    )
)

(def layout SquadBonusTooltipContent() entrance=true
    (macro SquadBonusTooltipContentModel)

    (style
        (width = 310px)
    )
    
    (tf
        (name = 'title')
        (class HighTitleTextStyle)
        (style
            (width = 100%)
        )
        (text = "R.strings.tooltips.squadBonus.title()")
    )

    (tf
        (name = 'description')
        (class MainTextStyle)
        (style
            (width = 100%)
        )
        (bind text "R.strings.tooltips.squadBonus[battleType].description.exists() 
                ? R.strings.tooltips.squadBonus[battleType].description() 
                : R.strings.tooltips.squadBonus.description()")
    )

    (block
        (name = 'creditsBlock')
        (style
            (width = 100%)
            (marginTop = 15px)
            (paddingTop = 10px)
            (paddingBottom = 25px)
            (backgroundImage = 'symbol:popupWhiteBgUI')
            (backgroundSize = "fill")
        )
        (tf
            (name = 'credits')
            (class MiddleTitleTextStyle)
            (style
                (width = 100%)
            )
            (text = "R.strings.tooltips.squadBonus.credits.header()")
        )

        (tf
            (name = 'bonusWithPremium')
            (class MainTextStyle)
            (style
                (width = 100%)
            )
            (bind htmlText "TextFormat(
                                htmlTextStyle(R.strings.tooltips.squadBonus.credits.bonusWithPremium(), 'MainTextStyle'),
                                {value:htmlTextStyle('' + creditsBonusWithPremium + R.strings.common.common.percent(), 'NeutralTextStyle')}
                            )"
            )
        )

        (tf
            (name = 'bonusWithoutPremium')
            (class MainTextStyle)
            (style
                (width = 100%)
            )
            (bind htmlText "TextFormat(
                                htmlTextStyle(R.strings.tooltips.squadBonus.credits.bonusWithoutPremium(), 'MainTextStyle'),
                                {value:htmlTextStyle('' + creditsBonusWithoutPremium + R.strings.common.common.percent(), 'NeutralTextStyle')}
                            )"
            )
        )
    )

    (tf
        (name = 'experience')
        (class MiddleTitleTextStyle)
        (style
            (width = 100%)
            (marginTop = 10px)
        )
        (text = "R.strings.tooltips.squadBonus.experience.header()")
    )

    (tf
        (name = 'experienceBonus')
        (class MainTextStyle)
        (style
            (width = 100%)
        )
        (bind htmlText "TextFormat(
                            htmlTextStyle(R.strings.tooltips.squadBonus.experience.bonus(), 'MainTextStyle'),
                            {value:htmlTextStyle('' + experienceBonus + R.strings.common.common.percent(), 'NeutralTextStyle')}
                        )"
        )
    )
)