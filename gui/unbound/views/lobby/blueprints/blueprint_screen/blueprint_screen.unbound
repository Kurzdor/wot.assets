    (fontFamily = $TitleFont)
    (fontSize = 16)
    (textColor = 0xFF2717)
)

(def css BluePrintsEnoughMoneyBigTextStyle()
    (fontFamily = $TitleFont)
    (fontSize = 16)
    (textColor = 0xe9e2bf)
)