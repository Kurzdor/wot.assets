(def element ContextMenuWindow() layout=true isReadyTracked=true entrance=true
    (macro WindowModel)
    (scope
        (var content:object = null)
    )

    (style
        (paddingBottom = 23px)
    )

    (mouseEnabled = false)

    (element HitArea)
    (hitArea = "$target.hitElement")

    # Stretched window background
    (image
        (source = "R.atlases.components.cm_menu_back()")
        (name = 'bg')
        (style
            (position = "absolute")
            (scale9grid = "Rect(18, 14, 188, 110)")
            (height = 100%)
            (top = -6px)
            (bottom = 6px)
            (left = -12px)
        )
    )

    (view_holder
        (name = 'View holder')
        (bind content "content" init=false)
    )

    (controller $Animation
        (bindcall play duration=0.2 to={alpha:1} from={alpha:0} init=false 
            (event "$evReadyChanged")
        )
    )
)
