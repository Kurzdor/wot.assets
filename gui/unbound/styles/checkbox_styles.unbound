# This macro is used inside other button specific macroses
(def macro CheckBoxStyles(size:expression, background:expression, icon:expression)
    (hover source="R.atlases.components.indicator_over()" scale9grid="BUTTON_BACKGROUND_RECT" blend='add' offsets=null)
    (background source="R.atlases.components.back_ghost()" scale9grid="BUTTON_BACKGROUND_RECT" offsets=null)
    (down source="R.atlases.components.indicator_down()" scale9grid=null offsets=null)

    (setFocusImage source="R.atlases.components.indicator_focus()" 
        scale9grid="Rect(15, 7, 135, 5)" 
        offsets="size['focusOffsets']"
    )
    (setFontColors colorUp=0x8c8c7e colorOver=0xc8c8b6 colorSelectedUp=0x8c8c7e colorSelectedOver=0xc8c8b6 colorDisabled=0x37362e)
    (toggleIndicator source="background"
        scale9grid=null
        offsets=[-11px, -11px, -11px, -11px] 
    )
    (toggleIcon 
        sourceToggleOn="icon"
        sourceToggleOff=null
        scale9grid=null
        offsets="size['iconOffsets']"
    )
    (textGap = "size['textGap']")
    (checkBoxSize = "size['size']")
    (labelTopOffset = "size['labelTopOffset']")

    (label 
        (style
            (fontFamily = $FieldFont)
            (fontSize = "size['fontSize']")
        )
    )
    (style
        # (backgroundColor = 0xcccccccc)
    )
 
    (soundDown = "R.sounds.play()")       # sound for 'down' state
    (soundOver = "R.sounds.highlight()")  # sound fo 'hover' state
)

(def macro CheckBoxStyleMain(size:expression)
    (macro CheckBoxStyles "size" "size['bg']['main']" "size['icons']['main']")
)

(def macro CheckBoxStylePrimary(size:expression)
    (macro CheckBoxStyles "size" "size['bg']['primary']" "size['icons']['primary']")
)