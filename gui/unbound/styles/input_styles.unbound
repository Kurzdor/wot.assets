(def constant TYPE_DYNAMIC 'dynamic')

(def css InputDisabledOverlayStyle()
    (backgroundImage = 'bitmap:InputDisable')
    (backgroundSize = "repeat")
    (width = 98%)
    (height = 90%)
)


(def constant INPUT_SIMPLE_STYLES {
