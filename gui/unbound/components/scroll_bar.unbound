(def macro ScrollBarH(step:number = 0)
    (scroll_bar
        (value = 0)
        (orientation = "Flow.HORIZONTAL")
        (btn_decr = 'SBLeftBtn')
        (track = 'SBHTrack')
        (thumb = 'SBHThumb')
        (btn_incr = 'SBRightBtn')
        (singleStep = "step")
    )
)

(def macro ScrollBarV(step:number = 0)
    (scroll_bar
        (value = 0)
        (orientation = "Flow.VERTICAL")
        (btn_decr = 'SBUpBtn')
        (track = 'SBVTrack')
        (thumb = 'SBVThumb')
        (btn_incr = 'SBDownBtn')
        (singleStep = "step")
