(def macro StateComponentsSound()
    (exec "playSound(R.sounds.highlight())" on='stateChanged'
        (enabled="$event.state == 'over'")
    )
    (exec "playSound(R.sounds.play())" on='stateChanged'
        (enabled="$event.state == 'down'")
    )
)

(def element SBHThumb() layout=true
    (style
        (width = 33px)
        (height = 13px)
    )
    (bind class "SB_H_THUMB[$event.state]" init=false on='stateChanged')
    (macro StateComponentsSound)
)

